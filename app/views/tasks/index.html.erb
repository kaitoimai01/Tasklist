<h1>検索フォーム</h1>
 <%= render 'search' %>

<h1>タスク一覧</h1>
 <table class="table table-striped">
  <thead>
   <tr>
    <th>項目</th>
    <th>ラベル</th>
    <th>優先度</th>
    <th>進捗状況</th>
    <th>タイトル</th>
    <th>内容</th>
    <th>締切日</th>
   </tr>
  </thead>
  <tbody>
   <% @tasks.each do |task| %>
   <tr>
    <td><%= link_to task.id, task %></td>
    <td><%= task.labels.each do |label| %>
     <%= label.name %>
     <% end %>
    </td>
    <td><%= task.priority %></td>
    <td><%= task.status %></td>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td>✔︎ <%= task.deadline %></td>
   </tr>
   <% end %>
  </tbody>
 </table>

<%= link_to '新規タスクの追加', new_task_path, class: "btn btn-primary" %>